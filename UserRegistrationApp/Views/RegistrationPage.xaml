<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:UserRegistrationApp.ViewModels"
             x:Class="UserRegistrationApp.Views.RegistrationPage"
             x:DataType="viewmodel:RegistrationViewModel"
             Title="Registration">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Create Account" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" />

            <Frame Style="{StaticResource CardView}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Username" />
                    <Entry Text="{Binding Username}" 
                           IsReadOnly="True" 
                           Style="{StaticResource EntryStyle}" />

                    <Label Text="Email" />
                    <Entry Text="{Binding Email}" 
                           Keyboard="Email" 
                           Style="{StaticResource EntryStyle}" />

                    <Label Text="Password" />
                    <Entry Text="{Binding Password}" 
                           IsPassword="True" 
                           Style="{StaticResource EntryStyle}" />

                    <Label Text="Confirm Password" />
                    <Entry Text="{Binding ConfirmPassword}" 
                           IsPassword="True" 
                           Style="{StaticResource EntryStyle}" />

                    <Label Text="{Binding ErrorMessage}" 
                           TextColor="Red" 
                           IsVisible="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}" />

                    <Button Text="Register" 
                            Command="{Binding RegisterCommand}" 
                            IsEnabled="{Binding IsNotBusy}"
                            Style="{StaticResource PrimaryButton}" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage> 